<section id="login">
  <%= form_tag login_path do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <%= submit_tag 'Log In' %>
  <% end %>
</section>
