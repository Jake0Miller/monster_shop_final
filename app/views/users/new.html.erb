<div class="container">
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= label_tag :address %>
      <%= text_field_tag :address %>
    </div>

    <div class="form-group">
      <%= label_tag :city %>
      <%= text_field_tag :city %>
    </div>

    <div class="form-group">
      <%= label_tag :state %>
      <%= text_field_tag :state %>
    </div>

    <div class="form-group">
      <%= label_tag :zip %>
      <%= text_field_tag :zip %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <%= f.submit 'Register', class:'btn btn-primary' %>
  <% end %>
</div>
