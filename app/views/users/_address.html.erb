<h1><%= @user.name %></h1>
<p><%= @user.email %></p>

<% @user.addresses.each do |address| %>
  <section id='address-<%= address.id %>'>
    <p><%= address.nickname %></p>
    <p><%= address.address %></p>
    <p><%= address.city %> <%= address.state %> <%= address.zip %></p>

    <% if address.shipped_orders.empty? %>
      <%= link_to 'Edit Address', edit_address_path(address) %>
      <%= link_to 'Delete Address', address_path(address), method: :delete %>
    <% end %>
  </section>
<% end %>
